<?xml version="1.0" encoding="utf-8"?>
<layout
    tools:context=".ui.DateSelectorFragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:translationZ="10dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <be.hogent.kolveniershof.ui.DateButton
                android:id="@+id/dateSelectorMinusTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:date="01"
                app:month="okt"
                app:selected="false" />

            <be.hogent.kolveniershof.ui.DateButton
                android:id="@+id/dateSelectorMinusOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:date="02"
                app:month="okt"
                app:selected="false" />

            <be.hogent.kolveniershof.ui.DateButton
                android:id="@+id/dateSelectorNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:date="03"
                app:month="okt"
                app:selected="true" />

            <be.hogent.kolveniershof.ui.DateButton
                android:id="@+id/dateSelectorPlusOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:date="04"
                app:month="okt"
                app:selected="false" />

            <be.hogent.kolveniershof.ui.DateButton
                android:id="@+id/dateSelectorPlusTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:date="05"
                app:month="okt"
                app:selected="false" />

        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>